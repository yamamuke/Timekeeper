<p id="notice"><%= notice %></p>

<h1>作業時間</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Content</th>
      <th>Start</th>
      <th>Stop</th>
      <th>Total</th>
<%
=begin %>
      <th>User</th>
<%
=end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @minutes.each do |minute| %>
      <tr>
        <td><%= minute.category %></td>
        <td><%= minute.content %></td>
        <td><%= minute.start %></td>
        <td><%= minute.stop %></td>
        <td><%= minute.total %></td>
<%
=begin %>  
        <td><%= minute.user.email %></td> %>
<%
=end %>
        <td><%= link_to 'Show', minute %></td>
        <td><%= link_to 'Edit', edit_minute_path(minute) %></td>
        <td><%= link_to 'Destroy', minute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


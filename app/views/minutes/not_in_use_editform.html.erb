<div class="modal fade" id="minuteModal" tabindex="-1" role="dialog" aria-labelledby="minuteModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: minute, remote: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title"><%= "#{params[:action].camelize}" %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">x</button>
        </div>
        <div class="modal-body">
          <span>※ 「カテゴリー」は入力必須項目です。</span>
<%
=begin %>
          <% if minute.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(minute.errors.count, "error") %> prohibited this minute from being saved:</h2>
              <ul>
                <% minute.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
<%
=end %>
          <div class="form-group first-form-group">
            <%= form.label :category %>
            <%= form.text_field :category %>
          </div>
          
          <div class="form-group">
            <%= form.label :content %>
            <%= form.text_field :content %>
          </div>
          
          <% if @minute.stop != @minute.start %>
            <div class="form-group">
              <%= form.label :start %>
              <%= form.datetime_select :start %>
            </div>
            
            <div class="form-group">
              <%= form.label :stop %>
              <%= form.datetime_select :stop %>
            </div>
          <% else %>
            <div class="form-group">
              <%= form.label :start %>
              <%= form.datetime_select :start %>
            </div>
            
            <div class="form-group">
              <%= form.label :stop %>
              <%= form.datetime_select :stop %>
            </div>
          <% end %>
          
          <div class="form-group">
            <%= form.label :total %>
            <%= form.number_field 0 %>
          </div>
          
          <div class="form-group">
            <%#= form.label :user_id %>
            <%= form.hidden_field :user_id %>
          </div>
          
          <div class="modal-footer actions">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
            <%= form.submit %>
          </div>
          
        </div>
      <% end %>
    </div>
  </div>
</div>

// モーダルを閉じる処理
$("#minuteModal.modal("hide");
$('body').reomveClass('modal-open');
$('.modal-backdrop').remove();

// Rails @status => true 画面の書き換え : false モーダルを再度表示
<% if @status %>
  $('[data-model_name'="minute"]').filter('[data-id="<%= @minute.id %>"]').replaceWith("<%= escape_javascript(render @minute) %>");
<% else %>
  $("#modalArea").html(<%= escape_javascript(render 'form', minute: @minute) %>")
  $("#modalArea").find(".modal").modal('show')
<% end %>
